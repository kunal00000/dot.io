// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  links Link[]
}

model Link {
  id        String @id @default(cuid())
  shortkey  String @unique // shortened url (e.g. 23c65ex)
  targetUrl String // target URL of the link (e.g. https://google.com)

  title       String? // OG title for the link (e.g. Dot.io - Url Shortner)
  description String? @db.VarChar(280) // OG description for the link
  image       String?

  clicks      Int       @default(0) // number of clicks
  lastClicked DateTime? // when the link was last clicked

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // User who created the link
  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}
